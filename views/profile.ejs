<!doctype html>
<html>
<head>
    <title>Family Recipes</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400&family=Jost:ital@0;1&family=Kdam+Thmor+Pro&family=Macondo&family=Poppins:ital,wght@0,300;0,400;0,500;1,200&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5429a7e2cf.js" crossorigin="anonymous"></script>
</head>
<body>
  <% if(lines === undefined){lines = ""} %>
<div class="container">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Family Recipes</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active">
        <li><a href="#">Your Profile</a></li>
        <li><a href="#">Your Recipes</a></li>
        <li><a href="#">Your Photos</a></li>
        <li><a href="#">Favorited Recipes</a></li>
        <li><a href="#">Our World's Recipes</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/logout" class="btn btn-default btn-sm">Log Out</a></li>
      </ul>
    </div>
  </nav>

  <img class="banner" src="img/profile1.png">
  <img class="bookFront" src="img/Recipe-Front.png"><i class="fa-solid fa-right-long"></i>
  <img class="bookFront" src="img/Recipe-Open.png">
  <img class="bookFront" src="img/Recipe-Back.png">
    <div class="page-header text-center">

        <a href="/profile" class="btn btn-default btn-sm deleteAuthorLines">Delete Your Recipe</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <div class="lines">
          <% for(var i=0; i<lines.length; i++) {%>
              <p class="storyLine"><%= lines[i].line %><span class="author"> (<%= lines[i].name %>)</span></p>
          <% } %>
          </div>

          <h3>Upload </h3>
        <% if (user.local.email) { %>
          <form action="/postLine" method="POST">
            <input type="text" placeholder="Name" name="name">
            <input type="text" placeholder="Story Line" name="line">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
